{
  "root": true,
  "globals": {
    "_": true
  },
  "env": {
    "browser": true,
    "jquery": true
  },
  "extends": [
    "./node_modules/eslint-config-g2a/.eslintrc.json",
    "./node_modules/eslint-es6-config-g2a/.eslintrc.json"
  ],
  "rules": {
    // Overriden G2A best practices for better compatibility and project convension
    "brace-style": ["error", "1tbs"],
    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true,
      "align": "colon"
    }],
    "quotes": ["error", "single", {
      "allowTemplateLiterals": true,
      "avoidEscape": true
    }],
    // Needed to be fixed manually - 2017.08.24
    // (frontend) ✖ 4709 problems (1589 errors, 3120 warnings)
    // (backend)  ✖ 7064 problems (2263 errors, 4801 warnings)
    "no-var": 0,
    "prefer-const": 0,
    "object-shorthand": 0,
    "eqeqeq": 0,
    "valid-jsdoc": 0,
    "guard-for-in": 0,
    "max-params": 0,
    "no-empty": 0,
    "new-cap": 0,
    "require-jsdoc": 0,
    "array-callback-return": 0,
    "no-alert": 0,
    "no-return-assign": 0,
    "no-empty-function": 0,
    "no-extend-native": 0,
    "no-mixed-operators": 0,
    "max-len": 0,
    "no-redeclare": 0,
    "no-loop-func": 0,
    "no-undefined": 0,
    "block-scoped-var": 0,
    "no-shadow": 0,
    "radix": 0,
    "no-inner-declarations": 0,
    "no-param-reassign": 0,
    "max-statements": 0,
    "max-lines": 0,
    "camelcase": 0,
    "no-invalid-this": 0,
    "no-useless-escape": 0,
    "no-undef": 0,
    "no-magic-numbers": 0,
    "max-statements-per-line": 0,
    "no-unused-vars": 0,
    "func-names": 0,
    "vars-on-top": 0,
    "no-use-before-define": 0,
    "no-new": 0,
    "no-unused-expressions": 0,
    "complexity": 0,
    "no-array-constructor": 0,
    "no-fallthrough": 0,
    "no-warning-comments": 0,
    "no-cond-assign": 0,
    "no-template-curly-in-string": 0,
    // ES6
    "prefer-rest-params": 0
  }
}
